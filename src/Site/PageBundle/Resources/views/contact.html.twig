{% extends '::base.html.twig' %}
{% block titre %}Contact | WebenoX{% endblock %}
{% block css %}
{{ parent() }}
<style>
        ul li{
            list-style:none;
        }
        textarea{
            width:100%;
            height:200px;
            resize:none;
        }
        input{
            width:100%;
        }
</style>
{% endblock %}
{% block contenu %}
{% include 'SitePageBundle:include:flash.html.twig' %}
<div class="page-header"><h2>Nous contacter</h2></div>
<form action="{{ path('contact') }}" method="POST">
    <div class="row-fluid">
        <div class="span6">
            {{ form_row(form.nom) }}
            {{ form_row(form.prenom) }}
        </div>
        <div class="span6">
            {{ form_row(form.email) }}
            {{ form_row(form.telephone) }}
        </div>
    </div>
    <div class="row-fluid">
    {{ form_row(form.sujet) }}
    {{ form_row(form.contenu) }}
    {{ form_rest(form) }}
    <br /><input type="submit" class="btn btn-primary" value="Envoyer" />
    </div>
</form>
{% endblock %}
