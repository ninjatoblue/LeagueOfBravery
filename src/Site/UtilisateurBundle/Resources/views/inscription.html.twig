{% extends '::base.html.twig' %}
{% block titre %}Inscription{% endblock %}
{% block contenu %}
<style>
        ul li{
            color:red;
        }
        hr{
            margin-top:0;
        }
        select{
            width:101%;
        }
        h4{
            margin-top:0;
        }
        textarea{
            width:100%;
            height:200px;
            resize:none;
        }
        input{
            width:98%;
        }
</style>
{% include 'SitePageBundle:include:flash.html.twig' %}
<div class="page-header"><h3>Inscription</h3></div>
<div class="well">
    <div class="row-fluid">
        <form style="float:none;margin:0 auto;" action="{{ path('utilisateur_inscription') }}" method="POST">
        <div class="span6">
            {{ form_row(form.pseudo, { 'attr': {'placeholder': 'Entre 3 et 15 caractères'} }) }}
            {{ form_row(form.password, { 'attr': {'placeholder': 'Entre 5 et 50 caractères'} }) }}
            {{ form_row(form.email, { 'attr': {'placeholder': 'Doit être valide'} }) }}
            <br /><p style="color:red;">En m'inscrivant sur ce site, j'accepte les <a href="" target="_blank">conditions générales d'utilisation.</a></p><br />
        </div>
        <div class="span6">
            {{ form_row(form.sexe) }}
            {{ form_row(form.poste) }}
            <label class="checkbox">{{ form_widget(form.emailHide) }}{{ form_label(form.emailHide) }}</label>
            <label class="checkbox">{{ form_widget(form.emailAuth) }}{{ form_label(form.emailAuth) }}</label>
            {{ form_rest(form) }}
        </div>
    </div>
    <div class="row-fluid">
        <input type="submit" class="btn btn-primary" value="Inscription" />
        </form>
    </div>
</div>
{% endblock %}