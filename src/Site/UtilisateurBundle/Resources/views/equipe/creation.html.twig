{% extends '::base.html.twig' %}
{% block titre %}Création d'une équipe{% endblock %}
{% block contenu %}
<style>
        ul li{
            color:red;
        }
        hr{
            margin-top:0;
        }
        select{
            width:auto;
        }
        h4{
            margin-top:0;
        }
        textarea{
            width:100%;
            height:100px;
            resize:none;
        }
        input{
            width:100%;
        }
</style>
{% include 'SitePageBundle:include:flash.html.twig' %}
<div class="span6 offset3"><div class="page-header" style="margin-top:0;"><h3>Créer mon équipe</h3></div></div>
<div class="span6 offset3">
    <div class="row-fluid">
        <form style="float:none;margin:0 auto;" action="{{ path('equipe_creation') }}" method="POST">
            {{ form_row(form.nom) }}
            {{ form_row(form.tag, {'attr': {'maxlength' : 5 } }) }}
            {{ form_row(form.password) }}
            {{ form_row(form.site) }}
            {{ form_row(form.description) }}
    </div>
    <div class="row-fluid">
        <br /><input type="submit" class="btn btn-primary" value="Valider" />
        </form>
    </div>
</div>
{% endblock %}